<h1>New forum</h1>

<% form_for @forum,:url => admin_forums_path do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "開新話題" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "內容" %><br />
    <%= f.text_area:body %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admin_forums_path %>
