<h1>Editing forum</h1>

<% form_for @forum, :url => admin_forum_instance_path do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "話題" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "內容" %><br />
    <%= f.text_area:body %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', admin_forum_instance_path %>
