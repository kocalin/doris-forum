<h1>好多論壇</h1>
<table>
  <tr>
  <td>話題</td>
  <td>內容</td>
  <td>文章數</td>
  </tr>

<% @forums.each do |forum| %>
  <tr>
    <td><%=h forum.title %></td>
    <td><%=h forum.body %></td>
    <td><%= pluralize forum.posts.size, 'post' %></td>
  </tr>
  <tr>
    <td colspan ="3"><%= link_to 'Show', forum %> | <%= link_to 'Edit', edit_forum_path(forum) %> | <%= link_to 'Destroy', forum, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New forum', new_forum_path %>
